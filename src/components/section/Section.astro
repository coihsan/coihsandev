---
interface Props {
  border?: string;
  className?: string;
}
const { border, className } = Astro.props
---

<section class={`relative w-full max-w-screen-lg mx-auto py-12 px-4 md:px-9 lg:px-16 lg:py-16 xl:py-16 ${border} ${className} border-x-[1px] border-white/20`}>
      <main class="max-w-screen-lg mx-auto w-full h-full">
        <span class="absolute top-0 left-[-5px] w-3 h-px bg-white" />
        <span class="absolute top-[-5px] left-0 h-3 w-px bg-white" />
        <span class="absolute top-0 right-[-5px] w-3 h-px bg-white" />
        <span class="absolute top-[-5px] right-0 h-3 w-px bg-white" />
        <slot />
      </main>
</section>