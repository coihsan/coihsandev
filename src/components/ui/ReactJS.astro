---
interface Props{
    gridClass: string;
}
import { Icon } from 'astro-icon/components';
import Link from './Link.astro';
const { gridClass } = Astro.props as Props
---
<div 
  class={`${gridClass} flex flex-col items-center justify-center bg-zinc-950 w-full lg:h-full h-72 relative border border-white/20 rounded-lg p-5 group mx-auto group overflow-hidden`}>
    <div class="flex items-center justify-center w-full">
        <Icon name="reactjs" size={"4rem"} />
    </div>
    <span
      class="flex items-end justify-between mt-3"
    >
      <div class="flex flex-col items-center w-full lg:w-[80%] mx-auto">
        <h2 class="text-[1.5rem] font-bold">React.js</h2>
        <p class="text-zinc-400 text-center pb-5">
          The library for web and native user interfaces
        </p>
        <Link target='_blank' href='https://react.dev/' variant='default' size='lg'>
          Get Started
        </Link>
      </div>
    </span>
  </div>