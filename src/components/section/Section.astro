---
interface Props {
  borderT?: boolean;
  borderB?: boolean;
  className?: string;
  paddingYDefault?: boolean;
  paddingYCustom?: string
}
const { borderT, borderB , paddingYDefault, paddingYCustom, className } = Astro.props
---

<section class:list={[
  `relative w-full max-w-screen-lg mx-auto border-x-[1px] border-white/20 px-4 md:px-9 lg:px-16`,
  borderT ? 'border-t-[1px]' : null,
  borderB ? 'border-b-[1px]' : null,
  paddingYDefault ? 'py-12 lg:py-16 xl:py-16' : null,
  paddingYCustom ? `${paddingYCustom}` : null,
  className ? className : null
]}>
      <main class="max-w-screen-lg mx-auto w-full h-full">
        <span class="absolute top-0 left-[-5px] w-3 h-px bg-white" />
        <span class="absolute top-[-5px] left-0 h-3 w-px bg-white" />
        <span class="absolute top-0 right-[-5px] w-3 h-px bg-white" />
        <span class="absolute top-[-5px] right-0 h-3 w-px bg-white" />
        <slot />
      </main>
</section>